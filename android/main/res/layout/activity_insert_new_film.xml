<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".activities.InsertNewFilm">

        <EditText
            android:id="@+id/moviename"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_edit_24"
            android:drawablePadding="16dp"
            android:hint="Movie Name"
            android:inputType="text"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/yearofproduction"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_history_toggle_off_24"
            android:drawablePadding="16dp"
            android:hint="Year of production"
            android:inputType="numberSigned"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moviename" />

        <EditText
            android:id="@+id/rate"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_star_rate_24"
            android:drawablePadding="16dp"
            android:hint="Rating"
            android:inputType="number"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yearofproduction" />

        <EditText
            android:id="@+id/runTime"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_watch_later_24"
            android:drawablePadding="16dp"
            android:hint="Running Time"
            android:inputType="numberSigned"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rate" />

        <EditText
            android:id="@+id/platForm"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_local_movies_24"
            android:drawablePadding="16dp"
            android:hint="Platform"
            android:inputType="text"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/runTime" />

        <EditText
            android:id="@+id/audiences"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_supervisor_account_24"
            android:drawablePadding="16dp"
            android:hint="Audiences"
            android:inputType="numberSigned"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/platForm" />

        <EditText
            android:id="@+id/type"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_movie_filter_24"
            android:drawablePadding="16dp"
            android:hint="Type"
            android:inputType="text"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/audiences" />

        <EditText
            android:id="@+id/description"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_description_24"
            android:drawablePadding="16dp"
            android:hint="Description"
            android:inputType="text"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type" />

        <EditText
            android:id="@+id/actors"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_baseline_supervisor_account_24"
            android:drawablePadding="16dp"
            android:hint="Actors"
            android:inputType="text"
            android:paddingHorizontal="22dp"
            android:textColor="@color/white"
            android:textColorHint="#fefefe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

        <Button
            android:id="@+id/insertButton"
            android:layout_width="374dp"
            android:layout_height="46dp"
            android:layout_marginTop="44dp"
            android:background="#ad3c34"
            android:text="insert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actors"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="375dp"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:text="INSERT NEW MOVIE DATA"
            android:textColor="@color/white"
            android:textSize="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>  
</ScrollView>