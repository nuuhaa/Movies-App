<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.RegisterActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="235dp"
        android:layout_height="67dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:text="REGISTER"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/RegistrationEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="204dp"
        android:layout_marginTop="204dp"
        android:background="#000000"
        android:hint="Email Address or Phone Number.."
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#F8F8FF"
        android:textColorHint="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/RegistrationPassword"
        android:layout_width="289dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:hint="Password.."
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#F8F8FF"
        android:textColorHint="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegistrationEmail" />

    <Button
        android:id="@+id/RegistrationButton"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="520dp"
        android:background="@color/red"
        android:padding="10dp"
        android:text="Sign Up"
        android:textColor="#F8F8FF"
        app:layout_constraintBottom_toTopOf="@+id/RegistrationPageQuestin3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RegistrationPageQuestin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="92dp"
        android:gravity="right"
        android:text="Already Have An  Account ? Sign in "
        android:textColor="#F8F8FF"
        app:layout_constraintBottom_toTopOf="@+id/RegistrationPageQuestin2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/RegistrationPageQuestin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Need help ? Press here   "
        android:textColor="#F8F8FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/RegistrationAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:hint="Type your age.."
        android:inputType="numberSigned"
        android:padding="10dp"
        android:textColor="#F8F8FF"
        android:textColorHint="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegistrationPassword" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="277dp"
        android:layout_height="78dp"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/RegistrationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_Female"
            android:layout_width="97dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="50dp"
            android:checked="true"
            android:buttonTint="@color/white"
            android:text="Female"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/RegistrationAge" />

        <RadioButton
            android:id="@+id/radio_Male"
            android:layout_width="99dp"
            android:layout_height="38dp"
            android:layout_marginTop="28dp"
            android:buttonTint="@color/white"
            android:text="Male"
            android:textColor="@color/white" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>